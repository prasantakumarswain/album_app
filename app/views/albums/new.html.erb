<h2 class="pull-left">Create Your New Album</h2>
<div>
  <div class="clearfix"></div>
  <%= form_for @album do |f| %>
      <div class="form-group">
        <div class = "col-md-4">
          <%= f.label  :name %>
          <%= f.text_field  :name, :class=>"form-control" %>
          <%= f.label  :description %>
          <%= f.text_area :description, :class=>"form-control" %>
        </div>
      </div>
      <div class="clearfix"></div>
      <div class="text-left"><%= f.submit "SUBMIT", :class => 'btn btn-primary' %></div>
  <% end %>
</div>